{
    "compilerOptions": {
        "target": "ESNext",
        "module": "ESNext",
        "moduleResolution": "bundler",
        "strict": true,
        "jsx": "preserve",
        "importHelpers": true,
        "experimentalDecorators": true,
        "skipLibCheck": true,
        "esModuleInterop": true,
        "allowSyntheticDefaultImports": true,
        "sourceMap": true,
        "baseUrl": ".",
        "paths": {
            "@/*": ["resources/js/*"],
            "@cms/*": ["resources/js/cms/*"],
            "#build/ui": ["./node_modules/.nuxt-ui/ui"]
        },
        "types": ["vite/client"]
    },
    "include": [
        "resources/js/**/*.ts",
        "resources/js/**/*.vue",
        "auto-imports.d.ts",
        "components.d.ts"
    ],
    "exclude": ["node_modules"]
}
